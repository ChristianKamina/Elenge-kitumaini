<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_bottom_sheet_dailog">

    <View
        android:id="@+id/views"
        android:background="@drawable/bg_view"
        android:layout_width="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_height="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Qui peut voir ce post ?"
        android:textColor="@color/colorNoir"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="Votre post sera visible dans le forum,sur votre profil et dans les résultats de recherche "
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_public"
            android:src="@drawable/ic_public"
            android:layout_marginTop="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/txt_monde"
            android:text="Tout le monde"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_public"
            android:layout_width="wrap_content"
            android:textColor="@color/colorNoir"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/txt_monde"
            android:text="Cette option permet à tout le monde  \nde voir votre identite et votre publication"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rb_tout_le_monde"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_public_1"
            android:src="@drawable/ic_baseline_public_off_24"
            android:layout_marginTop="3dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:id="@+id/txt_monde_1"
            android:text="Anonymat"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_public_1"
            android:layout_width="wrap_content"
            android:textColor="@color/colorNoir"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@+id/txt_monde_1"
            android:text="Cette option vous permez de cacher \n votre identité"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_public_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rb_anonyme"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

</LinearLayout>